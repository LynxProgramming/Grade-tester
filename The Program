#include <iostream>
#include <string.h>
#include <windows.h>

using namespace std;

int main()
{
    float mediavoti; // average grades choose by you
    float numerovoti; // total of grades to insert
    char materia[20]; // subject
    float voti; // grades
    float somma=0; // sum grades
    int a=0; // variable
    cout << "insert the subject of your grades : ";
    cin >> materia;
    cout << "insert the total number of your grades : ";
    cin >> numerovoti;

    while(a < numerovoti)
    {
        cout << "insert the grades : ";
        cin >> voti;
        somma += voti;
        a++;
    }
    float media= (somma/numerovoti); // the average grades by your grades
    cout << endl;
    cout << "subject : " << materia << endl;
    cout << "avarage grades :" << media << endl;
    cout << endl;
    cout << "which average grades you want reach? ";
    cin >> mediavoti;
    cout << endl;
    int unodue;
    cout << "press 1 to have only one greater number , else press 2 to have more number which the higter numers is 10 but only for 2 time. ";
    cin >> unodue;
    cout << endl;
    float x; // the number
    float y; // the number
    float z; // the number
    float sommax; // is the sum of sum + number x or y
    float mediax; // average grades with x or y
    float sommaxy; // is the sum of sum + number x or y and z
    float mediaxy; // average grades with x or y and z
    if(unodue == 1)
    {
        if(media < mediavoti)
        {
            float x = 0.0;
            float sommax;
            float mediax;
            do
            {
                sommax = somma + x;
                mediax = sommax / ( numerovoti+1);
                x = x + 0.1;
                if(mediax >= mediavoti)
                {
                    cout << "you have to get " << x << " to have the average grades greater to the average grades choose" << endl;
                }
            }while(mediax <= mediavoti && x < 100.0);
            return 1;
        }
        else if(media >= mediavoti);
        {
            float y = 10.0;
            float sommax;
            float mediax;
            do
            {
                sommax = somma + y;
                mediax = sommax / (numerovoti+1);
                y = y - 0.1;
                if(mediax < mediavoti)
                {
                    cout << "you have not to get " << y << " otherwise your average grades go down the average grades choose" << endl;
                }
            }while(mediax > mediavoti && y > -100.0);
        }
        return 2;
    }
    if(unodue == 2)
    {
        if(media < mediavoti)
        {
            float x = 0.0;
            float sommax;
            float mediax;
            float z = 0.0;
            do
            {
                sommax = somma + x;
                mediax = sommax / ( numerovoti + 1);
                x = x + 0.1;
                if(mediax >= mediavoti)
                {
                    if(x < 10)
                    {
                        cout << "you have to get " << x << " to have the average grades greater to the average grades choose" << endl;
                    }
                    if(x > 10)
                    {
                        do
                        {
                            x = x - 0.1;
                        }while(x >= 10.1);
                        if(x <= 10.1)
                        {
                            float sommaxy;
                            float mediaxy;
                            float z = 0.0;
                            do
                            {
                                z = z + 0.1;
                                sommaxy = (somma + x ) + z;
                                mediaxy = sommaxy / ( numerovoti + 2);
                                if(mediaxy >= mediavoti)
                                {
                                    cout << "you have to get " << x << " and " << z << " to have the average grades greater to the average grades choose" << endl;
                                }
                            }while(mediaxy <= mediavoti && z < 100.0);
                        }
                    }
                }
            }while(mediax <= mediavoti && x < 100.0 && z < 100.0);
            return 1;
        }
        else if(media >= mediavoti);
        {
            float y = 10.0;
            float sommax;
            float mediax;
            do
            {
                sommax = somma + y;
                mediax = sommax / (numerovoti+1);
                y = y - 0.1;
                if(mediax < mediavoti)
                {
                        /*if(x < 0)
                        {
                            
                        }*/
                   // cout << "you have not to get " << y << " otherwise your average grades go down the average grades choose" << endl;
                   }
            }while(mediax > mediavoti && y > -100.0);
        }
    }
    return 0;
}
